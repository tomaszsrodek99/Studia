@model IEnumerable<ST1.Models.GroupModel>
@{
    ViewData["Title"] = "Tournament groups";
}

<h2 style="color: black; text-align:center;">@ViewData["Title"]</h2>

<div class="container tournament-div">
    @for (int i = 0; i < 6; i++)
    {
        <table class="col-md-offset-3 col-md-6 my-table tournament-table">
            <thead>
                <tr class="table-row">
                    <th class="left">GRUPA @ViewBag.Group[i]</th>
                </tr>
                <tr class="table-row">
                    <th style="text-align: left;" class="col-md-2">Team</th>
                    <th style="text-align: right;" class="col-md-1">Matches</th>
                    <th style="text-align:center" class="col-md-1">For</th>
                    <th style="text-align:center;" class="col-md-1">Against</th>
                    <th style="text-align:center;" class="col-md-1">Points</th>
                </tr>
            </thead>
            <tbody>
                @{ int number = 0; }
                @foreach (var item in Model)
                    {
                    if(item.Group == ViewBag.Group[i]) { 
                        number++;
                        <tr>
                            <td class="col-md-2">@number. @item.Name</td>
                            <td class="col-md-1">@item.Matches</td>
                            <td class="col-md-1">@item.GoalsFor</td>
                            <td class="col-md-1">@item.GoalsAgainst</td>
                            <td class="col-md-1">@item.Points</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }



</div>

